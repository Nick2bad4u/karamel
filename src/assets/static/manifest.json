{
	"manifest_version": 2,

	"name": "tube",
	"description": "View Reddit comments on YouTube!",
	"version": "1.1.0",

	"browser_action": {
		"default_icon": "icon.png"
	},
	"icons": {
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*.youtube.com/*"],
			"js": ["index.js"],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},

	"permissions": ["https://www.reddit.com/", "storage"]
}
