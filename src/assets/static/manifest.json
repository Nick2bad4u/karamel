{
	"manifest_version": 2,

	"name": "tube",
	"description": "TODO",
	"version": "0.1.0",

	"browser_action": {
		"default_icon": "icon.png"
	},
	"icons": {
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*.youtube.com/*"],
			"js": ["index.js"],
			"run_at": "document_end"
		}
	],

	"permissions": [
		"https://www.reddit.com/",
		"storage"
	]
}
