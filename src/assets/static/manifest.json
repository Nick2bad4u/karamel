{
	"manifest_version": 2,

	"name": "Karamel: View Reddit comments on YouTubeâ„¢",
	"description": "Step up your watching experience by embedding relevant Reddit comments under YouTube videos.",
	"version": "1.2.0",

	"browser_action": {
		"default_icon": "icon-48.png"
	},
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*.youtube.com/*"],
			"js": ["index.js"],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},

	"permissions": ["https://www.reddit.com/", "storage"]
}
